<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenerateName"
    android:background="@drawable/beardark"
    >


    <TextView
        android:id="@+id/genderText"
        android:layout_width="226dp"
        android:layout_height="36dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="65dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Your babys name is"
        android:textColor="@color/textColor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameText"
        android:layout_width="229dp"
        android:layout_height="45dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="NAME"
        android:textColor="@color/textColor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderText" />

    <Button
        android:id="@+id/saveName"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_width="164dp"
        android:layout_height="57dp"
        android:layout_marginTop="135dp"
        android:text="Save Name"
        app:layout_constraintBottom_toTopOf="@+id/shareButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <Button
        android:id="@+id/shareButton"
        android:layout_width="164dp"
        android:layout_height="55dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="123dp"
        android:layout_marginBottom="33dp"
        android:fontFamily="cursive"
        android:text="Share Name"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/repeatButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveName" />

    <Button
        android:id="@+id/repeatButton"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_width="167dp"
        android:layout_height="56dp"
        android:layout_marginStart="125dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="75dp"
        android:text="Generate Another Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shareButton" />
</androidx.constraintlayout.widget.ConstraintLayout>