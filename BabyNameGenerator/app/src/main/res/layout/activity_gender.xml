<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beardark"
    tools:context=".gender">

    <TextView
        android:id="@+id/genderHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:text="Boy or Girl?"
        android:textColor="@color/textColor"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="cursive"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/boyButton"
        android:layout_width="133dp"
        android:layout_height="71dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="140dp"
        android:text="Boy"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderHeader"
        android:fontFamily="cursive"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/girlButton"
        android:layout_width="133dp"
        android:layout_height="71dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="140dp"
        android:text="Girl"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boyButton"
        android:fontFamily="cursive"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/eitherButton"
        android:layout_width="133dp"
        android:layout_height="71dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="140dp"
        android:text="Either"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girlButton"
        android:fontFamily="cursive"
        android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>